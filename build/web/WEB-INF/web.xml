<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>pruebaServletDao</servlet-name>
        <servlet-class>controlador.pruebaServletDao</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CursoImg</servlet-name>
        <servlet-class>controlador.CursoImg</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditarCurso</servlet-name>
        <servlet-class>controlador.EditarCurso</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActualizarCurso</servlet-name>
        <servlet-class>controlador.ActualizarCurso</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminarCurso</servlet-name>
        <servlet-class>controlador.EliminarCurso</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Registarse</servlet-name>
        <servlet-class>controlador.Registarse</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IniciarSesion</servlet-name>
        <servlet-class>controlador.IniciarSesion</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>pruebaServletDao</servlet-name>
        <url-pattern>/pruebaServletDao</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CursoImg</servlet-name>
        <url-pattern>/CursoImg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditarCurso</servlet-name>
        <url-pattern>/EditarCurso</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActualizarCurso</servlet-name>
        <url-pattern>/ActualizarCurso</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminarCurso</servlet-name>
        <url-pattern>/EliminarCurso</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Registarse</servlet-name>
        <url-pattern>/Registarse</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IniciarSesion</servlet-name>
        <url-pattern>/IniciarSesion</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
